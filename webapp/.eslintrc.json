{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": [
    "standard",
    "standard-react",
    "react-app"
  ],
  "globals": {
    "fetch": true
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "^16.6.3"
    }
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": [
    "simple-import-sort",
    "react-hooks"
  ],
  "rules": {
    "import/no-anonymous-default-export": [
      "error",
      {
        "allowObject": true
      }
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "max-len": [
      "error",
      {
        "comments": 100,
        "code": 100
      }
    ],
    "no-trailing-spaces": "error",
    "semi": [
      "error",
      "always"
    ],
    "simple-import-sort/imports": "error",
    "space-before-function-paren": [
      "error",
      "never"
    ],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "error"
  }
}